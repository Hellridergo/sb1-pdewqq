<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="bg-gray-100">
    <ActionBar title="Reset Password" class="bg-green-500 text-white">
        <NavigationButton text="Back" android.systemIcon="ic_menu_back" />
    </ActionBar>
    
    <StackLayout class="p-6">
        <Label text="Enter your email address to reset your password" textWrap="true" class="text-center mb-6" />
        <TextField hint="Email" text="{{ email }}" keyboardType="email" class="input mb-6 p-4 bg-white rounded-lg" />
        <Button text="Reset Password" tap="{{ onResetPassword }}" class="btn bg-green-500 text-white p-4 rounded-lg" />
    </StackLayout>
</Page>